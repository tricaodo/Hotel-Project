<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Hotel</p>
            <div class="list-group">
                <a href="/" class="list-group-item active">Home Page</a>
                <a href="/" class="list-group-item">Booking</a>
                <a href="/" class="list-group-item">Service</a>
                <a href="/" class="list-group-item">Entertainment</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <div class="thumbnail" id="show-image">
                        <img src="<%= room.image %>" alt="">
                        <div class="caption-full">
                            <h4 class="pull-right">$9.00</h4>
                            <h4><a href="#"><%= room.name %></a></h4>
                            <p><%= room.desc %></p>
                            <h5 class="text-right"><em>Written by</em>: <%= room.author.username %></h5>
                            <a href="/rooms/<%= room._id %>/edit" class="btn btn-xs btn-warning">Edit Room</a>
                            <form action="/rooms/<%= room._id %>?_method=DELETE" method="POST" style="display: inline">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        <div class="text-right">
                            <a href="/rooms/<%= room._id %>/comments/new" class="btn btn-success">Add New Comment</a>
                        </div>
                        <hr>
                        <% room.comments.forEach(function (comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p><%= comment.content %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>





</div>

<% include ../partials/footer %>