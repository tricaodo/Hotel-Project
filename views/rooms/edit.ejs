<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="text-align: center; width: 30%; margin: 25px auto">
            <h2>Edit <%= room.name %></h3>
            <form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="room[name]" value="<%= room.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="room[url]" value="<%= room.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="room[desc]" rows="5"><%= room.desc %></textarea> 
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Edit</button>
                </div>    
                <div class="form-group">
                    <a href="/rooms/<%= room._id %>" class="btn btn-md btn-default btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>