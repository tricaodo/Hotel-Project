<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="text-align: center; width: 30%; margin: 25px auto">
            <h2>Add A New Comment For <%= room.name %></h3>
            <form action="/rooms/<%= room._id %>/comments/" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="content" rows="5" placeholder="Comment"></textarea> 
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>    
                <div class="form-group">
                    <a href="/rooms/<%= room._id %>/" class="btn btn-md btn-default btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>